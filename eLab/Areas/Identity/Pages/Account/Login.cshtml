@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="card card-outline card-primary">
   <div class="card-header text-center">
      <a href="../../index2.html" class="h1"><b>e</b>-Lab</a>
   </div>
   <div class="card-body">
      <p class="login-box-msg">Sign in to start your session</p>
      <form id="account" method="post">

         <div asp-validation-summary="ModelOnly" class="text-danger"></div>

         <div class="input-group">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email"/>
            <div class="input-group-append">
               <div class="input-group-text">
                  <span class="fas fa-envelope"></span>
               </div>
            </div>
         </div>
         <span asp-validation-for="Input.Email" class="text-danger"></span>

         <div class="input-group mt-3">
            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password"/>
            <div class="input-group-append">
               <div class="input-group-text">
                  <span class="fas fa-lock"></span>
               </div>
            </div>
         </div>
         <span asp-validation-for="Input.Password" class="text-danger"></span>

         <div class="row mt-3">
            <div class="col-8">
               <div class="icheck-primary">
                  <input type="checkbox" id="remember">
                  <label for="remember">
                  Remember Me
                  </label>
               </div>
            </div>
            <div class="col-4">
               <button id="login-submit" type="submit" class="btn btn-primary btn-block">Sign In</button>
            </div>
         </div>
      </form>
      <div class="social-auth-links text-center mt-2 mb-3">
         <a href="#" class="btn btn-block btn-primary">
         <i class="fab fa-facebook mr-2"></i> Sign in using Facebook
         </a>
         <a href="#" class="btn btn-block btn-danger">
         <i class="fab fa-google-plus mr-2"></i> Sign in using Google+
         </a>
      </div>
      <p class="mb-1">
         <a href="forgot-password.html">I forgot my password</a>
      </p>
      <p class="mb-0">
         <a href="register.html" class="text-center">Register a new membership</a>
      </p>
   </div>
</div>
     

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
