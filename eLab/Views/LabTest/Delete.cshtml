@model LabTest
@using eLab.Data

@{
    ViewData["Title"] = "Lab Test Delete";
}

<div class="card">
    <div class="card-header bg-secondary">
        <h2>Delete Lab Test</h2>
    </div>
    <div class="card-body">
        <div class="text-center">

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="form-group row">
                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10">
                        <input asp-for="Name" class="form-control" disabled/>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10">
                        <input asp-for="Price" class="form-control" disabled/>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                        <label asp-for="Category"></label>
                    </div>
                    <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10">
                        <input asp-for="Category" class="form-control" disabled/>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10">
                        <textarea asp-for="Description" class="form-control" disabled></textarea>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                        <label asp-for="Preparation"></label>
                    </div>
                    <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10">
                        <textarea asp-for="Preparation" class="form-control" disabled></textarea>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                        <label asp-for="IsActive">Status</label>
                    </div>
                    <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10">
                        <input asp-for="IsActive" class="form-check" disabled/>
                    </div>
                </div>


                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>

    </div>
</div>
